<h1>Dashboard</h1>

<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Chefs</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Bookings</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <% @chefs.each do |chef| %>
      <%= chef.first_name %>
    <% end %>
  </div>

  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <ul>
    <% @bookings.each do |booking| %>
      <li><%= booking.start_time %> | <%= booking.end_time %> |<%= booking.total_price %></li>
    <% end %>
    </ul>
  </div>
</div>

<div class="container">
  <div class="index-header">
    <h2>Booked chefs</h2>
    <p>View details of your booking</p>
  </div>
  <div class="row booking-row align-items-center">
    <div class="col-2">
      <strong>
        <p>Name</p>
      </strong>
    </div>
  </div>
    <div class="row booking-row align-items-center">
    <div class="col-2">
      <strong>
        <p>Start Date</p>
      </strong>
    </div>
  </div>
    <div class="row booking-row align-items-center">
    <div class="col-2">
      <strong>
        <p>End Date</p>
      </strong>
    </div>
  </div>
    <div class="row booking-row align-items-center">
    <div class="col-2">
      <strong>
        <p>Total Amount</p>
      </strong>
    </div>
  </div>
    <div class="row booking-row align-items-center">
    <div class="col-2">
      <strong>
        <p>Status</p>
      </strong>
    </div>
  </div>
  <%= link_to 'Back', chefs_path, class: 'btn' %>
</div>
