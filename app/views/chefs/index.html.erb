<h2 class="chef-list">CHEF'S LIST</h2>
<p class="chef-list"> Choose a chef to view more details for booking</p>
<br>
<div class="container">
    <div class="card-map">
      <div class="cards">
        <% @chefs.each do |chef| %>
          <div class="card-product">
            <img src="https://images.squarespace-cdn.com/content/v1/5c5c3833840b161566b02a76/1573133725500-Y5PCN0V04I86HDAT8AT0/WBC_7095.jpg?format=2500w" />
            <div class="card-product-infos">
              <h2><%= chef.first_name %> <%= chef.last_name %></h2>
              <p>Rating: <%= chef.rating %></p>
              <p>Speciality: <%= chef.speciality %></p>
              <p>Price per day: <%= chef.price %>TL</p>
              <%= link_to 'View', chef_path(chef), class: 'btn btn-view js-scroll-trigger'%>
            </div>
          </div>
        <% end %>
      </div>
      <div class="container-map">
        <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        <%= link_to 'New Chef', new_chef_path, class: 'btn chef-btn chef js-scroll-trigger'%>
        <%= link_to 'Back', root_path, class: 'btn chef-btn js-scroll-trigger' %>
      </div>
    </div>
</div>
